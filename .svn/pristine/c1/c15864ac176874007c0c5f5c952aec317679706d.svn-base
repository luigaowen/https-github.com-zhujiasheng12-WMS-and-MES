<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="../../layui-v2.4.5/layui/css/layui.css" rel="stylesheet" />
    <script src="../../layui-v2.4.5/layui/layui.js"></script>
</head>
<body>
    <input style="margin-left:1%;" id="file" type="file" multiple="multiple">
    <button id="upload" class="layui-btn layui-btn-sm">上传</button>
    <table id="demo" lay-filter="test"></table>
    <p id="number" hidden></p>
    <script type="text/html" id="barDemo">
        <a><span class="layui-btn layui-btn-xs" lay-event="downLoad">下载</span></a>
        <button class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</button>
    </script>
    <script id="toolbarDemo">
        <div class="layui-btn-container">

        </div>
    </script>
    <script>
        function method(orderNum1, processId1,workNum1,type1,orderId1) {
            orderNum = orderNum1
            processId = processId1
            processNum = workNum1
            type = type1
            orderId = orderId1
            layui.use('table', function () {
                var table = layui.table, $ = layui.$;
                
                //第一个实例
                reload = table.render({
                    elem: '#demo'
                    //, height: 312
                    , url: 'blankJigFileRead.ashx'
                    //, page: true,
                    //toolbar: '#toolbarDemo',
                   , where: { processId: processId, type: type }
                    , cols: [[ //表头
                      { field: 'number', type: 'numbers', title: '编号', fixed: 'left' }
                        , { field: 'fileName', title: '文件名',  }
                        , { field: 'fileSize', title: '文件大小',  }
                          , { field: 'uploadTime', title: '上传时间',  }
                        , { field: 'filePath', title: '文件路径',  hide: true }
                        , { field: 'toolbar', title: '操作',  toolbar: '#barDemo' }
                    ]], done: function () {
                        if (type == "编程文件") {
                              $.ajax({
                        url: 'Controller/判断工程编程负责人.ashx?orderId=' + orderId,

                        success: function (d) {
                            if (d == "ok") {

                                

                            } else {
                                $('[lay-event="del"]').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                                $('#upload').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                            }
                        }

                    })
                        } else {
                              $.ajax({
                        url: 'Controller/判断工艺规划负责人.ashx?orderId=' + orderId,

                        success: function (d) {
                            if (d == "ok") {

                                

                            } else {
                                $('[lay-event="del"]').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                                $('#upload').addClass('layui-btn-disabled').attr('disabled', 'disabled')
                            }
                        }

                    })
                        }
                        

                    }
                });

            });

        }
    </script>
    <script>
        layui.use(['table', 'layer'], function () {
            var table = layui.table, layer = layui.layer, $ = layui.$;

            $(function () {
                $("#upload").click(function () {
                    if (type == "编程文件") {
                         $.ajax({
                                 url: 'Controller/判断工程编程负责人.ashx?orderId=' + orderId,
                                
                    success: function (d) {
                        if (d == "ok") {


                                           var formData = new FormData();
                    var file = $("#file")[0].files

                    if (file.length == 0) {
                        layer.alert("请选择文件")
                    } else {
                        for (var i = 0; i < file.length; i++) {
                            formData.append("file" + i, file[i])
                        }
                       
                        formData.append('orderNum', orderNum)
                        formData.append('processId',processId)
                        formData.append('processNum',processNum)
                        formData.append('type',type)
                        
                        $.ajax({
                            url: '重新上传毛坯治具图纸.ashx',
                            data: formData,
                            type: 'post',
                            processData: false,
                            contentType: false,
                            success: function (d) {
                                if (d == "ok") {
                                    layer.msg("上传成功", { icon: 1, time: 1000 }, function () {
                                        reload.reload({

                                        })
                                    })
                                }
                            }
                        })
                    }

                            
                        } else {
                            layer.alert(d);
                            return;
                        }
                    }

                })
                    } else {
                        $.ajax({
                                 url: 'Controller/判断工艺规划负责人.ashx?orderId=' + orderId,
                                
                    success: function (d) {
                        if (d == "ok") {


                                           var formData = new FormData();
                    var file = $("#file")[0].files

                    if (file.length == 0) {
                        layer.alert("请选择文件")
                    } else {
                        for (var i = 0; i < file.length; i++) {
                            formData.append("file" + i, file[i])
                        }
                       
                        formData.append('orderNum', orderNum)
                        formData.append('processId',processId)
                        formData.append('processNum',processNum)
                        formData.append('type',type)
                        
                        $.ajax({
                            url: '重新上传毛坯治具图纸.ashx',
                            data: formData,
                            type: 'post',
                            processData: false,
                            contentType: false,
                            success: function (d) {
                                if (d == "ok") {
                                    layer.msg("上传成功", { icon: 1, time: 1000 }, function () {
                                        reload.reload({

                                        })
                                    })
                                }
                            }
                        })
                    }

                            
                        } else {
                            layer.alert(d);
                            return;
                        }
                    }

                })
                    }
        


     
                })
            })
            //监听行工具事件
            table.on('tool(test)', function (obj) {
                var data = obj.data;

                if (obj.event === 'del') {
                    if (type == "编程文件") {
                         $.ajax({
                                 url: 'Controller/判断工程编程负责人.ashx?orderId=' + orderId,
                                
                    success: function (d) {
                        if (d == "ok") {
                          layer.confirm('是否删除', function (index) {
                        $.ajax({
                            url: 'fileDelete.ashx',
                            data: { 'number': data.filePath },
                            success: function (d) {
                                if (d == "ok") {
                                    layer.msg("删除成功", { icon: 1, time: 1000 }, function () {
                                        reload.reload({})
                                    })
                                }
                            }
                        })
                        layer.close(index);
                    });
                            
                        } else {
                            layer.alert(d);
                            return;
                        }
                    }

                })
                    } else {
                        $.ajax({
                                 url: 'Controller/判断工艺规划负责人.ashx?orderId=' + orderId,
                                
                    success: function (d) {
                        if (d == "ok") {
                          layer.confirm('是否删除', function (index) {
                        $.ajax({
                            url: 'fileDelete.ashx',
                            data: { 'number': data.filePath },
                            success: function (d) {
                                if (d == "ok") {
                                    layer.msg("删除成功", { icon: 1, time: 1000 }, function () {
                                        reload.reload({})
                                    })
                                }
                            }
                        })
                        layer.close(index);
                    });
                            
                        } else {
                            layer.alert(d);
                            return;
                        }
                    }

                })
                    }
                    

                   
                } else if (obj.event === 'downLoad') {
                    $('#110').remove();
                    var number = $('#number').text();
                    $.ajax({
                        url: '../downLoadPathRead.ashx',
                        success: function (d) {
                            var http = d;
                            if (type == "治具") {
                                var path = http + orderNum + '/工序' + processNum + "/" + type + "/" + data.fileName;

                            } else if (type == "毛坯") {
                                var path = http + orderNum + '/工序1/' + type + "/" + data.fileName;

                            } else if (type == "编程文件") {
                               var path = http + orderNum + '/工序' + processNum + "/" + type + "/" + data.fileName;
                            }
                            else if (type == "工艺文件") {
                               var path = http + orderNum + '/工序' + processNum + "/" + type + "/" + data.fileName;
                            }
                            var button = '<a href="' + path + '" download="' + data.fileName + '"><button id="110" hidden>1</button></a>';
                            $('body').append(button);
                            $('#110').click();
                            $('#110').find('a').remove()
                        }
                    })

                }
            });
        })
    </script>
</body>
</html>